{
  "extends": "airbnb",
  "env": {
    "mocha": true,
    "node": true,
    "es6": true,
    "browser": true
  },
  "rules": {
    "comma-dangle": 0,
    "func-names": 0,
    "prefer-arrow-callback": 0,
    "react/jsx-filename-extension": [
      2, { "extensions": [".js"] }
    ],
    "react/jsx-boolean-value": [2, "always"],
    "react/prefer-es6-class": 0,
    "react/prefer-stateless-function": 0
  }
}
